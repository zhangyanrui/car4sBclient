<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent" android:layout_margin="10dp"
            android:background="@drawable/shape_order"
            android:layout_height="wrap_content" android:id="@+id/layout_all"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_title" android:background="@drawable/shape_jish_notbusy"
                style="@style/appstyle_basic_text_black"
                android:gravity="left" android:layout_width="match_parent"
                android:paddingBottom="5dp" android:singleLine="true" android:ellipsize="end"
                android:paddingLeft="15dp" android:text="ssss"
                android:paddingTop="10dp"
                android:textSize="@dimen/textsize_large"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/tv_desc1"
                style="@style/appstyle_basic_text_black"
                android:layout_height="wrap_content" android:layout_width="match_parent"
                android:gravity="left" android:singleLine="true" android:ellipsize="end"
                android:paddingBottom="10dp" android:text="aaa"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tv_desc2"
                  android:visibility="visible" android:gravity="left" android:singleLine="true" android:ellipsize="end"
                  android:text="忙碌" style="@style/appstyle_basic_text_black"
                />

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tv_timeshengyu"
                  android:visibility="visible" android:gravity="left"
                  android:text="忙碌" style="@style/appstyle_basic_text_black"
                />
        <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                      android:orientation="vertical" android:background="@color/lighter_gray"></LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/layout_zhifu"
                      android:orientation="horizontal">
            <TextView style="@style/appstyle_basic_text_black" android:layout_weight="1" android:text="取消订单"
                      android:id="@+id/cancel"
                      android:textColor="@color/color_green"/>
            <TextView style="@style/appstyle_basic_text_black" android:layout_weight="1" android:text="去支付"
                      android:id="@+id/jiesuan"
                      android:textColor="@color/color_green"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="right" android:id="@+id/layout_bianji"
                      android:orientation="horizontal">
            <Button style="@style/appstyle_basic_text_black" android:text="编辑" android:textColor="@color/color_green"
                    android:layout_margin="0dp" android:layout_width="100dp"
                    android:id="@+id/edit"
                    android:layout_gravity="right"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="right" android:id="@+id/layout_pingjia"
                      android:orientation="horizontal">
            <Button style="@style/appstyle_basic_text_black" android:text="给技师评价"
                    android:layout_margin="0dp" android:layout_width="200dp"
                    android:id="@+id/pingjia"
                    android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>