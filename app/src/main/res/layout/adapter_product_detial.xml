<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:background="@android:color/white"
                android:layout_height="80dp">

    <ImageView
            android:layout_width="60dp"
            android:layout_margin="10dp" android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:id="@+id/src_right"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_toRightOf="@+id/src_right"
                  android:orientation="vertical" android:paddingTop="5dp" android:paddingBottom="5dp">
        <TextView style="@style/appstyle_product_text" android:text="fanwei" android:id="@+id/tv_1"/>
        <TextView style="@style/appstyle_product_text" android:text="fanwei" android:id="@+id/tv_2"/>
        <TextView style="@style/appstyle_product_text" android:text="fanwei" android:id="@+id/tv_3"/>
    </LinearLayout>
    <LinearLayout style="@style/appstyle_basic_horizal_line" android:layout_alignParentBottom="true"></LinearLayout>
</RelativeLayout>