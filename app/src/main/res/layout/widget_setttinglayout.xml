<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="51dp" android:background="@color/lighter_gray">
    <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/src_left"
               android:layout_centerVertical="true"
               android:layout_margin="10dp"
               android:layout_alignParentLeft="true"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal" android:layout_toLeftOf="@+id/src_right"
                  android:layout_toRightOf="@+id/src_left" android:gravity="center_vertical">


        <TextView style="@style/appstyle_basic_text_black" android:text="" android:layout_marginLeft="20dp"
                  android:id="@+id/tv_title"
                  android:layout_marginRight="20dp"/>


        <TextView style="@style/appstyle_basic_text_black" android:text="" android:id="@+id/tv_desc"
                  android:textSize="@dimen/textsize_small"/>
    </LinearLayout>


    <ImageView android:layout_width="15dp" android:layout_height="30dp" android:id="@+id/src_right"
               android:layout_margin="10dp"
               android:layout_alignParentRight="true"/>

    <LinearLayout style="@style/appstyle_basic_horizal_line" android:layout_alignParentBottom="true"
                  android:background="@color/darker_gray"></LinearLayout>
</RelativeLayout>