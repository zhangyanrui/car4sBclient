<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/common_actionbar"></include>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent" android:layout_weight="1 "
                android:layout_height="match_parent">
        </WebView>

        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal"
                      android:visibility="gone"
                      android:id="@+id/share_layout">
            <TextView style="@style/appstyle_basic_text" android:layout_weight="1" android:text="邀请微信好友挣钱"
                      android:id="@+id/share_weixin"
                      android:background="@color/actionbar_red" android:layout_margin="5dp"/>
            <TextView style="@style/appstyle_basic_text" android:layout_weight="1" android:text="邀请QQ好友挣钱"
                      android:layout_margin="5dp" android:id="@+id/share_qq"
                      android:background="@color/actionbar_red"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>