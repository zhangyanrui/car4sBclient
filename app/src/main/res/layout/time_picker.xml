<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="300dp" android:layout_height="400dp"
                    android:background="@android:color/white">
        <ListView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/listview">
        </ListView>
    </RelativeLayout>
    <LinearLayout android:layout_width="300dp" android:layout_height="40dp"
                  android:orientation="horizontal" android:gravity="center">
        <TextView style="@style/appstyle_basic_text_black" android:text="确定" android:layout_alignParentLeft="true"
                  android:id="@+id/sure" android:visibility="gone"
                  android:layout_weight="1"/>
        <TextView style="@style/appstyle_basic_text_black" android:text="取消" android:layout_alignParentRight="true"
                  android:layout_weight="1" android:id="@+id/cancel"/>
    </LinearLayout>
</LinearLayout>