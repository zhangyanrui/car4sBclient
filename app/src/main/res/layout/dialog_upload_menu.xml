<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:background="#eeeeee"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/layout_dialog_allwidth"
            android:layout_width="match_parent" android:padding="20dp"
            android:layout_height="fill_parent">
        <Button android:id="@+id/dialog_upload_take"
                android:background="@drawable/selector_btn_dialog_cancel"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textsize_normal"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        <Button android:id="@+id/dialog_upload_abulmb"
                android:background="@drawable/selector_btn_dialog_cancel"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="相册"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textsize_normal"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        <Button android:id="@+id/dialog_upload_cancel"
                android:background="@drawable/selector_btn_dialog_cancel"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textsize_normal"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
    </LinearLayout>
</LinearLayout>