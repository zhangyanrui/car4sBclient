<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/common_actionbar"></include>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal">
        <TextView style="@style/appstyle_basic_text" android:text="意见反馈" android:layout_weight="1"
                  android:gravity="left|center_vertical" android:padding="10dp"
                  android:layout_height="match_parent" />

        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_alignParentRight="true"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal">
        <TextView style="@style/appstyle_basic_text" android:text="关于                          V1.0" android:layout_weight="1"
                  android:gravity="left|center_vertical" android:padding="10dp"
                  android:layout_height="match_parent" />

        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_alignParentRight="true"/>
    </LinearLayout>
</LinearLayout>