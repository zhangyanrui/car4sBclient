<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:background="#eeeeee"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/layout_dialog_allwidth"
            android:layout_width="300dp" android:padding="20dp"
            android:layout_height="250dp">
        <TextView style="@style/appstyle_basic_text_black" android:layout_width="match_parent" android:gravity="center"
                  android:id="@+id/dialog_sex_title"
                  android:text="请选择您的性别"/>

        <RadioGroup
                android:id="@+id/rap_tab_radiogroup"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <RadioButton
                    android:id="@+id/rdo_tab_1"
                    style="@style/appstyle_rdp_sex"
                    android:checked="true"
                    android:text="男"/>

            <RadioButton
                    android:id="@+id/rdo_tab_2"
                    style="@style/appstyle_rdp_sex"
                    android:text="女"/>

        </RadioGroup>


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView android:id="@+id/dialog_upload_cancel"
                      android:layout_marginTop="10dp"
                      android:gravity="center"
                      android:text="取消" android:layout_weight="1"
                      android:textColor="@color/color_black"
                      android:textSize="@dimen/textsize_normal"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"/>

            <TextView android:id="@+id/dialog_upload_sure"
                      android:layout_marginTop="10dp"
                      android:gravity="center"
                      android:text="确定" android:layout_weight="1"
                      android:textColor="@color/color_black"
                      android:textSize="@dimen/textsize_normal"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>